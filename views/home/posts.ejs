<% include ../partials/boilerplate.ejs %>
<div class="navbar navbar-default navbar-fixed-top">
<div class="ui inverted menu" style="height:50px;margin-bottom:0px;">
  <a id="toggle">
    <img src="/img/hamburger.png" style="width:40px;height:35px;margin-top:9px;margin-left:5px;margin-right:10px;"></img>
  </a>
  <a class="logout" style="margin-left:1230px;font-size:20px;margin-top:13px;color:red;text-align:rigt;" href="/logout">
    Logout
  </a>
</div>
</div>

<div class="ui left vertical inverted sidebar labeled icon menu">
  <a class="item" href="/home">
    <i class="home icon"></i>
    Home
  </a>
  <a class="item">
    <i class="block layout icon"></i>
    Topics
  </a>
  <a class="item">
    <i class="smile icon"></i>
    Friends
  </a>
</div>
<div class="feed" style="margin-left:520px;margin-top:100px;margin-bottom:100px;">

  <% allPosts.forEach(el => { %>
  <div class="ui feed" style="margin: 0 auto;margin-bottom:20px;height:90px;font-size:20px">
    <div class="event">
      <div class="label">
        <img src="/img/avatar.png" style="margin-top:7px;margin-left:15px;">
      </div>
      <div class="content">
        <div class="summary">
           <a href=/users/<%=el.post_user%>><%=el.post_user%></a> created a post
        </div>
        <div class="extra text">
          <a href="/index/<%=el.id%>"> <%=el.post_title%> </a>
        </div>
    </div>
   </div>
  </div>

  <% }) %>



  <script>
  $('#toggle').click(function(){
    $('.ui.labeled.icon.sidebar')
    .sidebar('toggle')
  })
</script>

