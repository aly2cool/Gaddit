<% include ../partials/boilerplate.ejs %>

<% if(data) { %>
    <h1 style="text-align:center;margin-top:100px"> You are already logged in </h1>

<a href="/home"><h1 style="text-align:center;"> Go Home </h1></a>
<%} else { %>
  <form class="ui form segment" action="/login" method="POST" style="width:400px;margin:0 auto;margin-top:100px;">
    <p>Go ahead and log in.</p>
    <div class="field">
      <label>Username</label>
      <input placeholder="Username" name="user_name" type="text">
    </div>
    <div class="field">
      <label>Password</label>
      <input type="password" name="password">
    </div>
    <button class="ui red button" type="submit">Submit</button>
  </form>
<%}%>
